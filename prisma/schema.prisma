// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Asset {
  id             String        @id @default(cuid())
  productAssetId String?
  name           String
  path           String
  size           Int
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  category       Category?
  ProductAsset   ProductAsset? @relation(fields: [productAssetId], references: [id])
}

model Category {
  id            String   @id @default(cuid())
  category_name String
  category_slug String
  assetId       String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  asset_id      Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)
}

model Product {
  id           String        @id @default(cuid())
  product_name String
  product_slug String
  price        Int
  description  String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  productAsset ProductAsset?
}

model ProductAsset {
  id         String  @id @default(cuid())
  assetId    Asset[]
  productId  String  @unique
  product_id Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}
